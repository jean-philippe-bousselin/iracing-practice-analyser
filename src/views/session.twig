{% extends "layout.twig" %}

{% block content %}

    <h1>Import Session</h1>

    <form method="post" enctype="multipart/form-data" action="/index.php/session/check-import">

        <div class="form-group">
            <label for="event">Event</label>
            <select class="form-control" id="event" name="event">
                {% for key,val in events %}
                    <option value="{{ val.id }}">{{ val.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="infos">Infos</label>
            <textarea class="form-control" name="infos" id="infos" placeholder="Weather, other important infos..."></textarea>
        </div>
        <div class="form-group">
            <label for="file">CSV Report</label>
            <input type="file" id="file" name="file" />
        </div>

        <button type="submit" class="btn btn-default">Check</button>

    </form>

{% endblock %}
